<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/skygod"
        android:layout_weight="0.70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="通往天國的階梯"
        android:id="@+id/textView3"
        android:layout_gravity="center|top"
        android:textSize="50dp"
        android:gravity="top" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="67dp"
        android:id="@+id/igv_story"
        android:layout_gravity="left|center_vertical"
        android:background="@mipmap/ic_cloud_story"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="67dp"
        android:id="@+id/igv_rule"
        android:layout_gravity="right|center_vertical"
        android:background="@mipmap/ic_cloud_rule"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="114dp"
        android:layout_height="67dp"
        android:id="@+id/igv_Start"
        android:background="@mipmap/ic_cloud_start"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:id="@+id/scv_show"
        android:layout_gravity="center|bottom" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/story"
            android:id="@+id/main_txv_show" />
    </ScrollView>


</FrameLayout>
